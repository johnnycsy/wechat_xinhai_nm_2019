.ls_main {
  display: flex;
  justify-content: center;
  align-content: center;
  padding: 0.5rem;
  width: 85%;
  margin: 0.5rem auto;
  /* border: 0.01rem solid #f8f8f8; */
  border-radius: 0.5rem;
  box-shadow: 0 0 0.5rem 0.05rem #dededc;
  background: white;
  font-size: 0.8rem;
}

.ls_main>view:first-child {
  width: 90%;
}

.ls_main>view:last-child {
  width: 10%;
}

.ls_icon {
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}
