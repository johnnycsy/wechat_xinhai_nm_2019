/* pages/merchantScanPut/index.wxss */

page {
  background: #f1f5f8;
}

.bg-white {
  background: white;
}

.header_top {
  display: table;
  width: 96%;
  margin: auto;
  padding: 0.5rem 0;
  border-radius: 0.5rem;
}

.header_top_list {
  display: table-cell;
  width: 50%;
  text-align: center;
  padding: 0.5rem 0;
  font-size: 0.8rem;
  color: #4f70b9;
}

.header_top_list >view:last-child {
  font-size: 1.2rem;
  font-weight: bold;
}

.list_main {
  width: 96%;
  margin: auto;
  margin-top: 1rem;
}

.list_title {
  background: #8aa7e5;
  color: white;
  padding: 0.5rem 0;
  text-align: center;
}

.but_scan {
  background: white;
  color: #83a1e3;
  padding: 0.25rem 0;
  text-align: center;
  font-size: 0.7rem;
  line-height: 2rem;
}

.list_val {
  padding: 0.25rem 0;
  border-top: 0.01rem solid #f1f5f8;
}

.lv_title {
  width: 60%;
}

.lv_specification {
  width: 40%;
  color: #8f8c8c;
}

.but_scan >image {
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: middle;
}

.lv_show {
  display: flex;
  justify-content: center;
  align-content: center;
}

.lv_show>view {
  margin: 0 0.25rem;
}

.lv_but image {
  width: 1.5rem;
  height: 1.5rem;
}

.lv_serial {
  margin-top: 1rem;
  width: 1.5rem;
  height: 1.2rem;
  line-height: 1.2rem;
  font-size: 0.8rem;
  background: #83a1e3;
  border-radius: 100%;
  color: white;
  text-align: center;
}

.lv_sub {
  width: 50%;
  margin: 1rem auto auto auto;
  background: #83a1e3;
  color: white;
  padding: 0.5rem 0;
  text-align: center;
  border-radius: 0.25rem;
}
