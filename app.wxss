/**app.wxss**/
@import "./utils/fonts/iconfont.wxss";
@import "./utils/weui.wxss";

page {
  overflow-x: hidden;
  overflow-y: scroll !important;
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.main {
  overflow-x: hidden;
  overflow-y: auto;
}

.icon-12 {
  font-size: 1.2rem;
}

.icon-14 {
  font-size: 1.4rem;
}

.icon-16 {
  font-size: 1.6rem;
}

.icon-18 {
  font-size: 1.8rem;
}

.icon-20 {
  font-size: 2rem;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* wechat */

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
