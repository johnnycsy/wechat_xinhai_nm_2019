/* pages/cartClose/index.wxss */

.main {
  padding-bottom: 2.5rem;
}

.pro-list {
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 0.8rem;
  padding: 0.3rem 0;
  border-bottom: 0.01rem solid #f0f0f0;
}

.pro-list:last-child {
  border-bottom: none;
}

.pro-img {
  width: 5rem;
  height: 5rem;
  border-radius: 0.25rem;
  overflow: hidden;
}

.pro-img >image {
  max-width: 100%;
  width: 100%;
  max-height: 100%;
}

.pro-val {
  width: 65%;
  margin-left: 0.5rem;
  position: relative;
}

.pro-val>view {
  padding: 0.25rem 0;
}

.pro-del {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
}

.pro-num {
  text-align: right;
  padding: 0 0.5rem;
}

.cart-but {
  display: flex;
  justify-content: center;
  align-content: center;
  height: 2.5rem;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.cart-list {
  line-height: 1.25rem;
  text-align: right;
  width: 60%;
  background: #f4f4f4;
  font-size: 0.7rem;
  padding-right: 0.5rem;
}

.cart-submit {
  width: 40%;
  text-align: center;
  line-height: 2.5rem;
  background: #5071ba;
  color: white;
  font-size: 1rem;
}

.pay-main {
  display: table;
  width: 95%;
  margin: 1rem auto auto auto;
  font-size: 0.7rem;
}

.pay-main>view {
  display: table-cell;
  margin-top: top;
}

.pay-main>view:first-child {
  width: 30%;
  text-align: left;
}

.pay-main>view:last-child {
  width: 70%;
  text-align: center;
  display: table-cell;
}

.pay-val {
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
}

.pay-list {
  width: 45%;
  line-height: 2rem;
  display: inline-block;
  margin: 0.5rem 1.5%;
  border: 0.01rem solid #f0f0f0;
}

.pay-select {
  border: 0.01rem solid red;
  color: red;
}
