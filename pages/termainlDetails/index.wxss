/* pages/termainlDetails/index.wxss */

.header {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 100%;
  border-bottom: 0.01rem solid #f6f8f9;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  z-index: 99;
}

.header>view {
  margin: 0.5rem 15% 0 15%;
  font-size: 0.8rem;
}

.header>view>view {
  width: 100%;
  height: 0.2rem;
  /* background: #4f70b9; */
  border-radius: 0.2rem;
  margin-top: 0.5rem;
}

.header-select {
  color: #4f70b9;
}

.header-select>view {
  background: #4f70b9;
}

.store-image {
  display: flex;
  justify-content: center;
  align-content: center;
  /* padding: 1rem 0; */
  width: 100%;
  height: 12rem;
  position: relative;
  margin: auto;
}

.store-pic {
  width: 100%;
  height: 100%;
  /* border-radius: 0.5rem; */
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.store-pic>image {
  width: 100%;
  max-width: 100%;
  /* max-height: 100%; */
}

.store-type {
  display: flex;
  justify-content: center;
  align-content: center;
  border-bottom: 0.01rem solid #4f70b9;
  line-height: 1rem;
}

.store-type > .iconfont {
  background: #4f70b9;
  color: white;
  min-width: 20%;
  padding: 0 0.3rem;
}

.store-types {
  width: 80%;
  padding: 0 0.25rem;
}

.store-maps {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  font-size: 0.8rem;
  color: #4f70b9;
  background: #fff;
  text-align: center;
  border-bottom: 0.01rem solid #4f70b9;
}

.store-name {
  width: 90%;
  margin: auto;
  text-align: center;
  margin-top: 0.5rem;
  font-size: 0.8rem;
  line-height: 1rem;
}

.store-name>view {
  display: inline-block;
  position: relative;
}

.store-name >view>.iconfont {
  position: absolute;
  top: 0;
  right: -1rem;
}

.user-info {
  font-size: 0.8rem;
  color: #8a8a8a;
  width: 90%;
  margin: 1rem auto 0 auto;
}

.user-info>view {
  padding: 0.5rem 0;
}

.user-but {
  display: table;
  width: 100%;
  color: #4f70b9;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 1rem;
}

.user-but-list {
  display: table-cell;
  width: 25%;
  text-align: center;
  font-size: 0.8rem;
}

.user-but-icon {
  width: 2rem;
  height: 2rem;
  line-height: 2rem;
  font-size: 1rem;
  border-radius: 100%;
  background: #f5f5f5;
  margin: auto auto 0.5rem auto;
}

.detailsMain, .orderMain {
  display: none;
  margin-top: 2.4rem;
}

.detailsMain {
  margin-bottom: 5.6rem;
}

.targetShow {
  display: block;
}

.header_order {
  display: table;
  width: 98%;
  margin: auto;
}

.horderlist {
  width: 25%;
  display: table-cell;
}

.hordermain {
  margin: 0.25rem;
  background: #83a1e3;
  color: white;
  font-size: 0.6rem;
  border-radius: 0.25rem;
  padding: 0.25rem;
}

.hordermain>view:last-child {
  font-size: 0.8rem;
  font-weight: bold;
}

.order-title {
  padding: 0.5rem;
  background: #f4f4f4;
  margin: 0.5rem 0;
}

.order-list-main {
  display: table;
  width: 98%;
  border-bottom: 0.01rem solid #f4f4f4;
  padding: 0 0 0.5rem 0;
  margin: auto;
}

.order-list-main:last-child {
  border-bottom: none;
}

.order-list-left, .order-list-right {
  display: table-cell;
  font-size: 0.8rem;
}

.order-list-left {
  width: 70%;
}

.order-list-right {
  width: 30%;
}

.order-l-left-table {
  display: table;
  width: 100%;
}

.order-l-left-table>view {
  display: table-cell;
  width: 50%;
}

.order-list-right>view {
  display: table;
}

.order-list-but {
  display: table-cell;
  width: 50%;
  text-align: center;
}

.order-list-but>text {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  background: #4f70b9;
  color: white;
  font-size: 0.8rem;
  margin: 0.25rem;
  border-radius: 0.25rem;
}
