/* pages/amap/index.wxss */

page {
  width: 100%;
  height: 100%;
}

.map_container {
  width: 100%;
  height: 100%;
}

.mode-click {
  width: 100%;
  background: #fff;
  text-align: center;
}

.mode-click cover-view {
  display: inline-block;
  width: 25%;
  padding: 0.5rem 0;
  text-align: center;
  border-right: 0.01rem solid #f0f0f0;
  transition: background 0.5s, color 0.5s;
}

.mode-click cover-view:last-child {
  border-right: none;
}

.selectDefaut {
  background: #00b26a;
  color: #fff;
}
